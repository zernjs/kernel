{
  "name": "@zern/kernel",
  "version": "1.0.0",
  "description": "Kernel plugin engine for Zern - A modern plugin system for NestJS",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run sync-version && tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:coverage:watch": "vitest --coverage --watch",
    "coverage:badge": "node scripts/generate-coverage-badge.js",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "sync-version": "node scripts/sync-version.js",
    "prebuild": "npm run sync-version"
  },
  "keywords": [
    "plugins",
    "modular",
    "typescript"
  ],
  "author": "BiteCraft",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^17.2.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "3.2.4",
    "coverage-badges-cli": "^1.2.5",
    "tsup": "^8.5.0"
  }
}
