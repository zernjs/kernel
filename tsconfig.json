{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node"],
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "@alerts/*": ["src/alerts/*"],
      "@alerts": ["src/alerts"],
      "@core/*": ["src/core/*"],
      "@core": ["src/core"],
      "@diagnostics/*": ["src/diagnostics/*"],
      "@diagnostics": ["src/diagnostics"],
      "@errors/*": ["src/errors/*"],
      "@errors": ["src/errors"],
      "@events/*": ["src/events/*"],
      "@events": ["src/events"],
      "@hooks/*": ["src/hooks/*"],
      "@hooks": ["src/hooks"],
      "@lifecycle/*": ["src/lifecycle/*"],
      "@lifecycle": ["src/lifecycle"],
      "@plugin/*": ["src/plugin/*"],
      "@plugin": ["src/plugin"],
      "@resolver/*": ["src/resolve/*"],
      "@resolver": ["src/resolve"],
      "@types/*": ["src/types/*"],
      "@types": ["src/types"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils"]
    },
    "plugins": [{ "name": "./tools/ts-ls-plugin", "patterns": ["**/*.plugin.ts"] }]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "tests/**/*.ts",
    "examples/**/*.ts",
    "examples/**/*.d.ts",
    "generated/**/*.d.ts",
    "tsup.config.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
