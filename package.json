{
  "name": "@zern/kernel",
  "version": "2.0.0-alpha.1",
  "description": "Next-generation Zern Kernel - Ultra-lightweight plugin engine with auto-extensibility",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:coverage:watch": "vitest --coverage --watch",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "plugins",
    "modular",
    "typescript",
    "kernel",
    "engine",
    "extensible",
    "minimal",
    "auto-extensible"
  ],
  "author": "BiteCraft",
  "license": "MIT",
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "3.2.4",
    "coverage-badges-cli": "^1.2.5",
    "tsup": "^8.5.0"
  }
}
